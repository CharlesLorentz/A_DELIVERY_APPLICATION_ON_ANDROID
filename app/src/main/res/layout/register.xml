<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
    />

    <EditText
        android:id="@+id/Gnum_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="120dp"/>

    <EditText
        android:id="@+id/Gpassword_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="120dp"/>

    <EditText
        android:id="@+id/confirm_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="120dp"/>

    <EditText
        android:id="@+id/Gname_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="120dp"/>

    <EditText
        android:id="@+id/Ggender_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="120dp"/>


    <EditText
        android:id="@+id/Gphone_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="275dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/Gaddress_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="120dp"/>

    <TextView
        android:id="@+id/Gnum"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="账号"
        android:layout_marginTop="50dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Gpassword"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="密码"
        android:layout_marginTop="95dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="确认密码"
        android:layout_marginTop="140dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Gname"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="姓名"
        android:layout_marginTop="185dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Ggender"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="性别"
        android:layout_marginTop="230dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Gphone"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="联系方式"
        android:layout_marginTop="275dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Gaddress"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="地址"
        android:layout_marginTop="320dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_marginTop="385dp"
        android:layout_marginLeft="300dp"/>
</RelativeLayout>