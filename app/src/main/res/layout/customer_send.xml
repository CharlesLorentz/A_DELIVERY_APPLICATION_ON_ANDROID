<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <TextView
        android:id="@+id/send"
        android:layout_width="76dp"
        android:layout_height="45dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:text="寄件"
        android:textSize="34sp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="83dp"
        android:layout_height="77dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/send2" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/receive" />

    <EditText
        android:id="@+id/send_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"
        android:text="请填写寄件人信息" />

    <EditText
        android:id="@+id/get_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="180dp"
        android:text="请填写收件人信息" />

    <TextView
        android:id="@+id/send_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="480dp"
        android:text="寄出方式"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/send_self"
        android:layout_width="102dp"
        android:layout_height="54dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="450dp"
        android:text="服务点自寄" />

    <CheckBox
        android:id="@+id/send_door"
        android:layout_width="102dp"
        android:layout_height="54dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="500dp"
        android:text="上门寄出" />

    <TextView
        android:id="@+id/server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="350dp"
        android:text="服务类型"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/send_there"
        android:layout_width="102dp"
        android:layout_height="54dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="350dp"
        android:text="到付" />

    <CheckBox
        android:id="@+id/send_here"
        android:layout_width="102dp"
        android:layout_height="54dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="300dp"
        android:text="寄付" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/back" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="600dp"
        android:text="完成" />

</RelativeLayout>